<!DOCTYPE html>
<html>
  <head>
    <title>Bbdatabase</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/1ef2703627.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'shared/nav'%>
  <div class="flash_notice">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
     <div class="container">
        <%= yield %>
     </div>
     <section class="footer">
        <div class="container">
          <div class="copy_right">
           Copyright Black Business Database <%= Date.today.year %> <%= link_to "Help", help_path %>
          </div>
        </div>
     </section>
     <script>
     function menuToggle() {
       const toggleMenu = document.querySelector('.dropnav');
       toggleMenu.classList.toggle('active')
     }

     function mobileToggle() {
       const toggleMenu = document.querySelector('.mobile_menu');
       toggleMenu.classList.toggle('active')
     }

  </script>
  </body>
</html>
