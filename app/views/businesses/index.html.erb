<section class="business_search_area">
     <div class="search">
         <%= form_tag(businesses_path,id: 'search_business_form', method: "get") do %> 
  <div class="container">
        <h1 class="title">BLACK BUSINESS DATABASE</h1>
        <div class="text_field">
            <div class=""> <%= select_tag "category", options_for_select(Category.all.pluck(:name),params[:category]),{include_blank: 'Type Of Business'} %></div>
            <div class=""> <%= select_tag "Country", options_for_select(Address.all.pluck(:country),params[:country]),{include_blank: 'Select a country Country'} %></div>
            <div class=""><input type="text"  name="search" value="<%= params[:search] %>" placeholder="Name of Business"></div>
            <div class=""><input type="text"  name="search" value="<%= params[:city] %>" placeholder="search city or state"></div>
        </div>
          <div class="boolean_field center">
            <label class="contain">Verified
              <%= check_box_tag :verified,true,params[:verified] %>
              <span class="checkmark"></span>
            </label>
            <label class="contain">Partnership
              <%= check_box_tag :partnership,true,params[:partnership] %>
              <span class="checkmark"></span>
            </label>
          </div>
          <div class="search_botton center">
            <button  class="btn-dark" type="submit"> Search Business</button>
          </div>
    </div>
        <% end %>
     </div>
</section> 

<section class="business_index">
  <div class="container">
    <h1>Businesses</h1>
    <% @businesses.each do |business| %>
        <p><%= link_to business.business_name, business%> </p>
    <%end%>
 </div>
</section>
