<div class="title_box">
   Add A Business
</div>
  <%= form_with(model: business) do |form| %>
      <% if business.errors.any? %>
        <div class='alert alert-danger'>There was a problem with saving this form.</div>
      <% end %>

    
    <div class="field">
      <%= form.label :business_name %>
      <%= form.text_field :business_name %>
      <%= form.errors :business_name %>
    </div>

    <div class="field">
      <%= form.label :about_text, "Brief Introduction"%>
      <%= form.text_field :about_text , value: 'Work Build and Teach'%>
      <%= form.errors :about_text %>
    </div>

    <div class="field">
      <%= form.label :business_email %>
      <%= form.email_field :business_email ,autocomplete: "email" %>
       <%= form.errors :business_email %>
    </div>
    
    

    <div class="field">
      <%= form.label :description %> 
      <%= form.rich_text_area :description , class: "form-control customized-min-height", value:"Tell As About Your Business"%>
       <%= form.errors :description %>
    </div>

    
