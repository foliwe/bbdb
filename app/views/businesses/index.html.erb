<section class="business_search_area">
  <div class="search">
    <h1 class="main_heading">BDB Database</h1>
    <%= search_form_for @q do |f| %>
        <div class="text_field">
          <div class=""> <%= f.search_field :business_name_cont, placeholder: "Search company"%></div>
          <div class=""><%= f.collection_select :categories_id_eq, Category.order("name"), :id, :name, include_blank: "Search By Category" %></div>
          <div class=""> <%=f.select :addresses_country_cont,Address.order("country").pluck(:country), include_blank: "Search By Country"%></div>
        </div>
        <div class="boolean_field center">
          <!--label class="contain">Verified
            <%#= f.check_box :verified_true %>
            <span class="checkmark"></span>
          </label>
          <label class="contain">Partnership
              <%#= f.check_box :accepts_partnership_true %>
            <span class="checkmark"></span>
          </label-->
        </div>
        <div class="search_botton center">
        <%=f.submit "Search Business", name: "commit",class:"btn btn-dark"%>
        </div>
      
    <% end %>
  </div>
</section> 


<section class="business_index">

  <div class="sponsor_1800 no_mobile">
      <div class="sponsor_head">
          <h1>AD</h1>
      </div>
     <%=image_tag('https://gbbdb.s3.amazonaws.com/ad.png')%>
  </div>

  <div class="container index_page_wrapper">

      <div class="__letf_top">
          <div class="__letf_top_title">
              <i class="fas fa-chart-line fa-2x"></i> <span> </span>
          </div>
          <div class="business_index_left">
            
            <% @businesses.each do |business| %>
                <%= link_to business do %>
                  <div class="business_card">
                    <%if business.verified%>
                      <div class="ribbon"><span>VERIFIED</span></div>
                      <%end%>
                      <div class="business_card_body">

                        <div class="__logo">
                        
                            <%=image_tag(business.logo.variant(resize_to_fill: [80, 80])) if business.logo.present? %>
                        
                        </div>

                        <div class="__content">
                          <h3><%=business.business_name.truncate(20)%> </h3>
                            <%business.categories.limit(1).each do |cat|%>
                                <h4><%= cat.name.truncate(20)%></h4>
                              <%end%>
                            <%= business.about_text.truncate(15) if business.about_text.present? %>
                        </div>

                      </div>
                      <%business.addresses.limit(1).each do |address|%>
                        <%=render 'businesses/business_card/card_footer' ,add: address%>
                      <%end%>
                  </div>
                <%end%>
            <%end%>
            
          </div>
          <div class="pagy">
              <%== pagy_nav(@pagy) %>
          </div>
      </div>

      <div class="__letf_right"> 

        <div class="business_index_right">
          <div class="new_header">
            <div class="__new">
              <h4>Lastest News</h4>
            </div>
            <div class="__shares">
              <h4>Accepting Partnership</h4>
            </div>
          </div>
          <div class="business_index_right__body">
            <div class="">
                  
            </div>
            
            <div class="__accept_partnership">
              <ul class= "apt">
                  <%Business.shares.limit(7).each do |biz|%>
                    <li><%= link_to biz.business_name.truncate(20), biz%> 
                      <span><i class="far fa-check-circle"></i></span>
                    </li>
                  <%end%>
                  
              <ul>
              <div class="shares_div"><%=link_to 'View All', '', class:"btn btn-success btn-xs"%></div>
            </div>

          </div>
        </div>
            


      </div>  
  </div>
</section>

<script>
document.addEventListener('scroll',()=>{
  const element =  document.querySelector('.sponsor_1800');
  //const scrollable = document.documentElement.scrollHeight - window.innerHeight;

  const scrolled = window.scrollY;
  if (Math.ceil(scrolled) >= 630) {
   element.style.position = 'fixed';
  } else{
    element.style.position = 'absolute';
  }
  //console.log(scrolled);
})



</script>